@{
    ViewBag.Title = "VSEPortal";
}

<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>@ViewBag.Title</title>

    <!-- Bootstrap Core CSS -->
    <link href="@Url.Content(@"~/Content/bootstrap.min.css")" rel="stylesheet">

    <!-- Custom CSS -->
    <link href="@Url.Content(@"~/Content/sb-admin.css")" rel="stylesheet">

    <!-- VSEPortal CSS -->
    <link href="@Url.Content(@"~/Content/vseportal.css")" rel="stylesheet">

    <!-- Morris Charts CSS -->
    <link href="@Url.Content(@"~/Content/plugins/morris.css")" rel="stylesheet">
    
    <!-- Paged List CSS -->
    <link href="@Url.Content(@"~/Content/PagedList.css")" rel="stylesheet" type="text/css" />

    <!-- Custom Fonts -->
    <link href="@Url.Content(@"~/Font_Awesome/css/font-awesome.min.css")" rel="stylesheet" type="text/css">

    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
        <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
        <script src="https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js"></script>
    <![endif]-->

</head>

<body>

    <div id="wrapper">

        <!-- Navigation -->
        <nav class="navbar navbar-inverse navbar-fixed-top" role="navigation">
            <!-- Brand and toggle get grouped for better mobile display -->
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-ex1-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a id="vseLogo" class="navbar-brand" href="@Url.Action("Index", "Home")">VSE<span style="color: #428bca">Portal</span></a>
            </div>
            <div class="top-nav notification-row">                
                <!-- Top Menu Items -->
                <ul class="nav navbar-right top-nav">
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                            <i class="fa fa-envelope"></i>
                            <span class="badge bg-success">12</span>
                            <b class="caret"></b>
                        </a>
                        <ul class="dropdown-menu message-dropdown" style="width: 400px">
                            <li class="message-preview" style="width: 400px">
                                <a href="#">
                                    <div class="media">                                        
                                        <div class="media-body">
                                            <h5 class="media-heading"><strong>CRM</strong>
                                            </h5>
                                            <p class="small text-muted"><i class="fa fa-clock-o"></i>Yesterday at 11:15 AM</p>
                                            <p>Activity "Ft. Benning Lead" was saved</p>
                                        </div>
                                    </div>
                                </a>
                            </li>
                            <li class="message-preview" style="width: 400px">
                                <a href="#">
                                    <div class="media">
                                        <div class="media-body">
                                            <h5 class="media-heading"><strong>CRM</strong>
                                            </h5>
                                            <p class="small text-muted"><i class="fa fa-clock-o"></i>Yesterday at 4:32 PM</p>
                                            <p>Keyword "LEAD" Alert for CRM Activity</p>
                                        </div>
                                    </div>
                                </a>
                            </li>
                            <li class="message-preview" style="width: 400px">
                                <a href="#">
                                    <div class="media">
                                        <div class="media-body">
                                            <h5 class="media-heading"><strong>SQL Server</strong>
                                            </h5>
                                            <p class="small text-muted"><i class="fa fa-clock-o"></i>July 15 at 2:32 PM</p>
                                            <p>SQL Server Job Errors</p>
                                        </div>
                                    </div>
                                </a>
                            </li>
                            <li class="message-footer">
                                <a href="#">Read All New Messages</a>
                            </li>
                        </ul>
                    </li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">                        
                            <i class="fa fa-bell"></i>
                            <span class="badge bg-warning">6</span>
                            <b class="caret"></b>
                        </a>
                        <ul class="dropdown-menu alert-dropdown" style="width: 400px">
                            <li>
                                <a href="#"><span class="label label-danger">Optrack</span> Estimated Contract Start Date Has Passed</a>
                            </li>
                            <li>
                                <a href="#"><span class="label label-warning">Contract</span> Contract: N00174-10-D-0011 - Top Level Contract Expires in 60 Days</a>
                            </li>
                            <li>
                                <a href="#"><span class="label label-success">CRM</span> Activity summary sent to Alert Staff</a>
                            </li>
                            <li>
                                <a href="#">View All</a>
                            </li>
                        </ul>
                    </li>
                    <li class="dropdown">
                        <a id="userInfoDropdown"  href="#" class="dropdown-toggle" data-toggle="dropdown"><i class="fa fa-user"></i> Felix Quijano <b class="caret"></b></a>
                        <ul class="dropdown-menu">
                            <li>
                                <a href="#"><i class="fa fa-fw fa-user"></i> Profile</a>
                            </li>
                            <li>
                                <a href="#"><i class="fa fa-fw fa-envelope"></i> Inbox</a>
                            </li>
                            <li>
                                <a href="#"><i class="fa fa-fw fa-gear"></i> Settings</a>
                            </li>
                            <li class="divider"></li>
                            <li>
                                <a href="@Url.Action("Index", "UserLogin")"><i class="fa fa-fw fa-power-off"></i> Log Out</a>
                            </li>
                        </ul>
                    </li>
                </ul>
            </div>
            
            @{Html.RenderPartial("SideNav");}
        </nav>

        <div id="page-wrapper">

            <div class="container-fluid">
                @RenderBody()
            </div>
            <!-- /.container-fluid -->

        </div>
        <!-- /#page-wrapper -->

    </div>
    <!-- /#wrapper -->

    <!-- jQuery Version 1.11.0 -->
    <script src="@Url.Content("~/scripts/jquery-1.11.0.js")"></script>
    
    <script src="@Url.Content("~/scripts/jquery.unobtrusive-ajax.js")"></script>

    <!-- Bootstrap Core JavaScript -->
    <script src="@Url.Content("~/scripts/bootstrap.min.js")"></script>
</body>

</html>
